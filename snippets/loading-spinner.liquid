{% comment %}
  Renders a loading-spinner

  Accepts:
    - class: {string} css classes to replace the default ones (optional)

  Usage:
  {% render 'loading-spinner',
    class: 'my-class'
  %}
{% endcomment %}

<span
  class='inline-block w-5 h-5 border-2 border-gray-300 border-t-black rounded-full animate-spin {% if class %}{{ class }}{% endif %}'
  role='status'
  aria-label='{{ 'accessibility.loading' | t }}'
>
  <span class='sr-only'>{{ 'accessibility.loading' | t }}</span>
</span>
