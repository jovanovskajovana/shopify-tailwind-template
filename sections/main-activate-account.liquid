<div class='container mx-auto px-4 py-12 max-w-md'>
  <h1 class='text-3xl font-bold mb-4 text-center'>{{ 'customer.activate_account.title' | t }}</h1>
  {%- assign subtext = 'customer.activate_account.subtext' | t -%}
  {%- if subtext != blank -%}
    <p class='text-center text-gray-600 mb-8'>{{ subtext }}</p>
  {%- endif -%}

  {%- form 'activate_customer_password', class: 'form', novalidate: 'novalidate' -%}
    {%- if form.errors -%}
      <div class='mb-6 p-4 bg-red-50 border border-red-200 rounded-lg'>
        <h2 class='text-red-800 font-semibold mb-2'>{{ 'accessibility.error' | t }}</h2>
        <ul class='list-disc list-inside text-sm text-red-700'>
          {%- for field in form.errors -%}
            <li>
              {%- if field == 'form' -%}
                {{ form.errors.messages[field] }}
              {%- else -%}
                <a href='#{{ field }}'>
                  {{- form.errors.translated_fields[field] | capitalize }}
                  {{ form.errors.messages[field] -}}
                </a>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}

    <div class='mb-4'>
      <label for='password' class='block mb-2 font-semibold'>
        {{ 'customer.activate_account.password' | t }}
      </label>
      <input
        type='password'
        id='password'
        name='customer[password]'
        autocomplete='new-password'
        class='w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-black'
        {% if form.errors contains 'password' %}
          aria-invalid='true'
          aria-describedby='password-error'
        {% endif %}
      >
      {%- if form.errors contains 'password' -%}
        <p id='password-error' class='mt-1 text-sm text-red-600'>{{ form.errors.messages.password }}</p>
      {%- endif -%}
    </div>

    <div class='mb-6'>
      <label for='password_confirmation' class='block mb-2 font-semibold'>
        {{ 'customer.activate_account.password_confirm' | t }}
      </label>
      <input
        type='password'
        id='password_confirmation'
        name='customer[password_confirmation]'
        autocomplete='new-password'
        class='w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-black'
        {% if form.errors contains 'password_confirmation' %}
          aria-invalid='true'
          aria-describedby='password_confirmation-error'
        {% endif %}
      >
      {%- if form.errors contains 'password_confirmation' -%}
        <p id='password_confirmation-error' class='mt-1 text-sm text-red-600'>{{ form.errors.messages.password_confirmation }}</p>
      {%- endif -%}
    </div>

    <div class='flex gap-4'>
      <button type='submit' class='flex-1 bg-black text-white px-8 py-3 rounded-lg hover:bg-gray-800 transition'>
        {{ 'customer.activate_account.submit' | t }}
      </button>
      <a
        href='{{ routes.root_url }}'
        class='flex-1 border border-black px-8 py-3 rounded-lg hover:bg-gray-100 transition text-center'
      >
        {{ 'customer.activate_account.cancel' | t }}
      </a>
    </div>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "Activate Account"
}
{% endschema %}
