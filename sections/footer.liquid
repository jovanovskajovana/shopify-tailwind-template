<footer class='bg-gray-900 text-white py-12 mt-20'>
  <div class='container mx-auto px-4'>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8'>
      {%- comment -%} Shop Links {%- endcomment -%}
      {%- if linklists.footer != blank -%}
        {%- for link in linklists.footer.links -%}
          <div>
            <h3 class='font-bold mb-4'>{{ link.title }}</h3>
            {%- if link.links != blank -%}
              <ul class='space-y-2'>
                {%- for childlink in link.links -%}
                  <li>
                    <a href='{{ childlink.url }}' class='hover:text-gray-300'>{{ childlink.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        {%- endfor -%}
      {%- endif -%}

      {%- comment -%} Contact Info {%- endcomment -%}
      {%- if section.settings.contact_info != blank -%}
        <div>
          <h3 class='font-bold mb-4'>{{ section.settings.contact_heading }}</h3>
          <p class='text-gray-400'>{{ section.settings.contact_info }}</p>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Policy Links {%- endcomment -%}
    {%- if shop.policies.size > 0 -%}
      <div class='mt-8 pt-8 border-t border-gray-800'>
        <ul class='flex flex-wrap justify-center gap-4 text-sm'>
          {%- for policy in shop.policies -%}
            <li>
              <a href='{{ policy.url }}' class='hover:text-gray-300'>{{ policy.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}

    {%- comment -%} Copyright {%- endcomment -%}
    <div class='mt-8 pt-8 border-t border-gray-800 text-center text-gray-400'>
      <p>
        &copy; {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "contact_heading",
      "label": "Contact Heading",
      "default": "Contact"
    },
    {
      "type": "textarea",
      "id": "contact_info",
      "label": "Contact Information"
    }
  ]
}
{% endschema %}
