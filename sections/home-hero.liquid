<section
  class='min-h-screen flex items-center justify-center bg-gray-100 relative{% if section.settings.background_image != blank %} bg-cover bg-center{% endif %}'
  {% if section.settings.background_image != blank %}
    style='background-image: url({{ section.settings.background_image | image_url: width: 1920 }})'
  {% endif %}
>
  <div class='container mx-auto px-4 text-center relative z-10'>
    {%- if section.settings.heading != blank -%}
      <h1 class='text-4xl md:text-6xl font-bold mb-6'>
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <p class='text-lg md:text-xl mb-8 text-gray-700'>
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}
    {%- if section.settings.button_text != blank -%}
      <a
        href='{{ section.settings.button_link | default: routes.all_products_collection_url }}'
        class='inline-block bg-black text-white px-8 py-4 rounded-lg hover:bg-gray-800 transition'
      >
        {{ section.settings.button_text }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
